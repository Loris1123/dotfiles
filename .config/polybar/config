[colors]
background = #222
background-alt = #444
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/main]
monitor = ${env:MONITOR}
width = 100%
height = 27
;offset-x = 1%
;offset-y = 1%
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = fixed:pixelsize=10;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = siji:pixelsize=10;1

modules-left = bspwm
modules-right = filesystem xbacklight pulseaudio memory cpu wlan eth0 battery date powermenu
module-margin = 2

tray-position = right
tray-padding = 2
;tray-background = #0063ff

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/bspwm]
type = internal/bspwm

label-focused = %name%
label-focused-background =  ${colors.background-alt}
label-focused-padding = 2

label-dimmed = %name%
label-dimmed-background =  ${colors.background}
label-dimmed-padding = 2

label-occupied = %name%
label-occupied-background =  ${colors.background}
label-occupied-padding = 2

label-urgent = %name%!
label-urgent-background =  ${colors.background}
label-urgent-padding = 2

[module/xbacklight]
type = internal/xbacklight

format = <label>
label = BL %percentage%%

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[module/cpu]
type = internal/cpu
interval = 2
format-prefix-foreground = ${colors.foreground-alt}
label = CPU: %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix-foreground = ${colors.foreground-alt}
label = RAM: %percentage_used%%

[module/wlan0]
type = internal/network
interface = wlan0
interval = 10.0

format-connected = <label-connected>
label-connected = wlan0: %signal%:%essid%:%local_ip%

format-disconnected =

[module/wlan1]
type = internal/network
interface = wlan1
interval = 10.0

format-connected = <label-connected>
label-connected = wlan1: %signal%:%essid%:%local_ip%

format-disconnected =

[module/eth0]
type = internal/network
interface = eth0
interval = 10.0

format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = eth0: %local_ip% UP: %upspeed% DOWN: %downspeed%

format-disconnected =

[module/eth1]
type = internal/network
interface = eth1
interval = 10.0

format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = eth1: %local_ip% UP: %upspeed% DOWN: %downspeed%

format-disconnected =

[module/eth2]
type = internal/network
interface = eth2
interval = 10.0

format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = eth2: %local_ip% UP: %upspeed% DOWN: %downspeed%

format-disconnected =

[module/date]
type = internal/date
interval = 5

date = "%a. %d. %b %Y"
time = %H:%M

format-prefix-foreground = ${colors.foreground-alt}

label = %time% %date%

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume> 
label-volume = "VOL %percentage%%"
label-volume-foreground = ${root.foreground}

label-muted = muted
label-muted-foreground = #666

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging = <label-charging>
label-charging = "BAT: Charging %percentage%%"

format-discharging = <label-discharging>
label-discharging = "BAT: Discharging %percentage%%"

format-full=<label-full>
format-full-prefix-foreground = ${colors.foreground-alt}
label-full="BAT: Full 100%"

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1

label-open = Session
label-open-foreground = ${colors.secondary}
label-close = Close
label-close-foreground = ${colors.secondary}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = Logout
menu-0-0-exec = menu-open-1
menu-0-1 = Reboot
menu-0-1-exec = menu-open-2
menu-0-2 = Power off
menu-0-2-exec = menu-open-3

menu-1-0 = Cancel
menu-1-0-exec = menu-open-0
menu-1-1 = Logout
menu-1-1-exec = i3exit logout

menu-2-0 = Cancel
menu-2-0-exec = menu-open-0
menu-2-1 = Reboot
menu-2-1-exec = sudo reboot

menu-3-0 = Power off
menu-3-0-exec = sudo poweroff
menu-3-1 = Cancel
menu-3-1-exec = menu-open-0

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
margin-top = 0
margin-bottom = 0
#
